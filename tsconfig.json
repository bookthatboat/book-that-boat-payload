{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@contexts/*": [
        "src/app/(frontend)/contexts/*"
      ],
      "@components/*": [
        "src/app/(frontend)/components/*"
      ],
      "@utils/*": [
        "src/app/(frontend)/utils/*"
      ],
      "@lib/*": [
        "src/app/(frontend)/lib/*"
      ],
      "@styles/*": [
        "src/app/(frontend)/styles/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@frontend-types/*": [
        "src/app/(frontend)/types/*"
      ],
      "@hooks/*": [
        "src/app/(frontend)/hooks/*"
      ],
      "@payload-types/*": [
        "src/*"
      ],
      "@payload-config": [
        "./src/payload.config.ts"
      ],
      "@payloadcms/*": [
        "node_modules/@payloadcms/*"
      ],
      "@payload/*": [
        "node_modules/@payloadcms/*"
      ]
    },
    "target": "ES2022"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
